	urldate = {2018-10-10},
	journal = {Biochimica et Biophysica Acta (BBA) - Biomembranes},
	author = {Dupuis, John H. and Yu, Hua and Habibi, Mona and Peng, Xubiao and Plotkin, Steven S. and Wang, Shenlin and Song, Chen and Yada, Rickey Y.},
	year = {2018},
	keywords = {Molecular dynamics, Membrane interactions, Protein-membrane interactions, Saposin-like protein},
	pages = {2608--2618},
}

@article{song_intrinsic_2009,
